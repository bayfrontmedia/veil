{
  "name": "bayfrontmedia/veil",
  "description": "A fast, lightweight, framework-agnostic PHP template engine.",
  "homepage": "https://github.com/bayfrontmedia/veil",
  "license" : "MIT",
  "type": "library",
  "keywords": [
    "php",
    "template",
    "engine",
    "view",
    "html",
    "markdown",
    "minify"
  ],
  "authors": [
    {
      "name": "John Robinson",
      "email": "john@bayfrontmedia.com",
      "homepage": "https://www.bayfrontmedia.com"
    }
  ],
  "support": {
    "issues": "https://github.com/bayfrontmedia/veil/issues"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "require": {
    "php": "^8.0",
    "bayfrontmedia/php-array-helpers": "^2.0",
    "bayfrontmedia/php-sanitize": "^2.1",
    "erusev/parsedown": "^1.7.4",
    "pfaciana/tiny-html-minifier": "*"
  },
  "autoload": {
    "psr-4": {
      "Bayfront\\Veil\\": "src/"
    }
  }
}
